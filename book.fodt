<text:p text:style-name="CodeTitre">array/destructuring-rest.js</text:p><text:p text:style-name="Code">const weekdays = [</text:p><text:p text:style-name="Code"><text:s text:c="2"/>'lundi', 'mardi', 'mercredi', 'jeudi', 'vendredi'</text:p><text:p text:style-name="Code">];</text:p><text:p text:style-name="Code"></text:p><text:p text:style-name="Code">const [first, second, ...rest] = weekdays;</text:p><text:p text:style-name="Code">console.log(rest);<text:s text:c="18"/><text:span text:style-name="PuceCode">1</text:span></text:p><text:p text:style-name="Code"></text:p><text:p text:style-name="Code">// revient au mÃªme que</text:p><text:p text:style-name="Code">// const [,, ...rest] = weekdays;</text:p>
